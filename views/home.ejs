<%- include('header1.ejs') %>
        
            <div style="width:650px; height:500px; padding: 50px; display: flex; align-items: center; flex-direction: column;">
                <form action="/tweet_submit" method="post" 
                
                enctype="multipart/form-data"
                
                style="display: flex; align-items: center; flex-direction: column;">
                    <div style="margin: 10px; display: flex; flex-direction: column; gap: 10px; align-items: center; justify-content: center;">
                        <textarea id="tweet" placeholder="Say something" name="tweet" style="text-align: center; background-color: rgb(22, 24, 28); color: white; border-radius: 4px; width:400px; height:100px; margin-left:20px;"></textarea>
                        <label for="tweet_img"  style="font-weight: bold;color: rgb(113, 118, 123);">
                            <input type="file" name="tweet_img" id="tweet_img" style="display: none;"/>
                            <img src="/images.png" id="icon" width="30" style="border-radius: 4px; cursor: pointer;">
                        </label>
                    </div>
                    
                    <input type="submit" value="Tweet" style="border-radius: 10px; font-size: larger; border: 1px solid rgb(113, 118, 123); font-weight: bold; padding: 10px ; background-color: rgb(29, 155, 240); cursor: pointer; color: white;"/>
                </form>
                <h2 style="text-align: center; border-radius: 10px; background-color: white; color: rgb(22, 24, 28); text-decoration: none; padding: 2px; width: 100px;">Feed</h2>
                <div style="border: 1px solid rgb(113, 118, 123); background-color: rgb(22, 24, 28); border-radius: 4px; width: 100%;">
                    <% for(var i = 0; i < result.length; i++) { %>
                        <div style="margin-top: 20px; display: flex; flex-direction: column; justify-content: center; align-items: center; border-bottom: 1px solid grey; padding: 10px;">
                            
                            <div style=" text-align: left; width: 80%; padding: 10px;">
                                <div style="padding: 10px;">
                                    <span style="font-weight: bold;">
                                        <%=result[i].f_name%> <%=result[i].l_name%>
                                    </span>
                                    <span style="color: rgb(113, 118, 123);">
                                         @<%=result[i].username%> â€¢ <%=(result[i].datetime.getDate()+"-"+(result[i].datetime.getMonth()+1)+"-"+result[i].datetime.getFullYear())%>
                                    </span>
                                    </div>
                                <span style="padding: 10px;"><%=result[i].content%></span>
                                <br/>
                                <% if (result[i].type != '' && (result[i].type=== 'image/jpeg' || result[i].type=== 'image/jpg' || result[i].type=== 'image/png')) { %>
                                <img src="uploads/<%=result[i].img_vid_name%>" width="400" style="border-radius: 20px; border: 1px solid black; margin: 10px;"/>
                                <% } else if (result[i].type === 'video/mp4') { %>
                                    <video src="uploads/<%=result[i].img_vid_name%>" controls width="400" style="border-radius: 20px; border: 1px solid black; margin: 10px;"/>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body> 
</html>